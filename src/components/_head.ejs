<%- include('./_meta.ejs'); %>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= site.title %></title>
    <meta name="description" content="<%= site.description %>" />
    <meta name="format-detection" content="telephone=no" />
    <!-- icon -->
    <link rel="icon" href="/assets/img/common/favicon.ico" sizes="32x32" type="image/vnd.microsoft.icon">
    <link rel="icon" href="/assets/img/common/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/assets/img/common/apple-touch-icon.webp">
    <link rel="manifest" href="/assets/json/manifest.webmanifest" crossorigin="use-credentials">
    <!-- ogp -->
    <meta property="og:site_name" content="<%= site.title %>" />
    <meta property="og:url" content="<%= site.url %>" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= site.title %>" />
    <meta property="og:description" content="<%= site.description %>" />
    <meta property="og:image" content="/assets/img/common/ogp.webp" />
    <meta property="og:locale" content="ja_JP" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="<%= site.description %>" />
    <meta name="twitter:image:src" content="/assets/img/common/ogp.webp" />
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&family=Noto+Serif+JP:wght@200..900&display=swap" rel="stylesheet">
    <!-- Files -->
    <script type="module" src="/assets/js/common.js"></script>
    <% if(page.id === 'index') { %>
    <script type="module" src="/assets/js/gsap.js"></script>
    <script type="module" src="/assets/js/index.js"></script>
    <% } else if(page.id === 'hoge') { %>
    <script type="module" src="/assets/js/hoge.js"></script>
    <% } else if(page.id === 'news') { %>
    <script type="module" src="/assets/js/news.js"></script>
    <% } else { %>
    <% } %>
    <link rel="stylesheet" href="/assets/styles/style.scss">
</head>
